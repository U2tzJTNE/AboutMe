<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <TextView
        android:id="@+id/tv_detail_other_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="其它信息"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_detail_other_developer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_detail_other_title"
        android:layout_marginTop="8dp"
        android:text="开发者："
        android:textColor="#9e9e9e"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_detail_other_developer_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_detail_other_title"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/tv_detail_other_developer"
        android:text="新起点网络工作室"
        android:textColor="#9e9e9e"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_detail_other_update_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_detail_other_developer"
        android:text="更新时间："
        android:textColor="#9e9e9e"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_detail_other_update_date_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_detail_other_developer_info"
        android:layout_toRightOf="@id/tv_detail_other_update_date"
        android:text="2017年6月12日"
        android:textColor="#9e9e9e"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_detail_other_update_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_detail_other_update_date"
        android:text="版本："
        android:textColor="#9e9e9e"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_detail_other_update_version_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_detail_other_update_date"
        android:layout_toRightOf="@id/tv_detail_other_update_version"
        android:text="3.1.5"
        android:textColor="#9e9e9e"
        android:textSize="14sp" />

</RelativeLayout>